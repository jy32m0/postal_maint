                    app:layout_constraintBottom_toTopOf="@id/buttonDB01"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDIOSS15" />

                <Button
                    android:id="@+id/buttonDB01"
                    style="@style/ButtonDB"
                    android:text="DBCS 01"
                    app:layout_constraintBottom_toTopOf="@id/buttonDB02"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDIOSS16" />

                <Button
                    android:id="@+id/buttonDB02"
                    style="@style/ButtonDB"
                    android:text="DBCS 02"
                    app:layout_constraintBottom_toTopOf="@id/buttonDB05"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDB01" />

                <Button
                    android:id="@+id/buttonDB05"
                    style="@style/ButtonDB"
                    android:text="DBCS 05"
                    app:layout_constraintBottom_toTopOf="@id/buttonDB09"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDB02" />

                <Button
                    android:id="@+id/buttonDB09"
                    style="@style/ButtonDB"
                    android:text="DBCS 09"
                    app:layout_constraintBottom_toTopOf="@id/buttonDB10"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDB05" />

                <Button
                    android:id="@+id/buttonDB10"
                    style="@style/ButtonDB"
                    android:text="DBCS 10"
                    app:layout_constraintBottom_toTopOf="@id/buttonDB12"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDB09" />

                <Button
                    android:id="@+id/buttonDB12"
                    style="@style/ButtonDB"
                    android:text="DBCS 12"
                    app:layout_constraintBottom_toTopOf="@id/buttonDB13"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
