<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.frags.DbFragment">

        <ScrollView
            android:id="@+id/scrollViewDb"
            style="@style/Scroll"
            android:contentDescription="List of DB-based equipment"
            app:layout_constraintBottom_toTopOf="@id/buttonDbCancel"
            app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
            app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonDIOSS15"
                    style="@style/ButtonDB"
                    android:text="DIOSS 15"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toTopOf="@id/buttonDIOSS16"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/buttonDIOSS16"
                    style="@style/ButtonDB"
