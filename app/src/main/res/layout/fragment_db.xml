                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDB17" />

                <Button
                    android:id="@+id/buttonDB19"
                    style="@style/ButtonDB"
                    android:text="DBCS 19"
                    app:layout_constraintBottom_toTopOf="@id/buttonDB20"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDB18" />

                <Button
                    android:id="@+id/buttonDB20"
                    style="@style/ButtonDB"
                    android:text="DBCS 20"
                    app:layout_constraintBottom_toTopOf="@id/buttonCIOSS02"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDB19" />

                <Button
                    android:id="@+id/buttonCIOSS02"
                    style="@style/ButtonDB"
                    android:text="CIOSS 02"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
                    app:layout_constraintTop_toBottomOf="@id/buttonDB20" />


            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/buttonDbCancel"
            style="@style/ButtonDB"
            android:layout_width="0dp"
            android:backgroundTint="@color/design_default_color_error"
            android:text="@string/btnCancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineDbRight"
            app:layout_constraintStart_toStartOf="@id/guidelineDbLeft"
            app:layout_constraintTop_toBottomOf="@id/scrollViewDb" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDbLeft"
            style="@style/GuidelineDB"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDbRight"
            style="@style/GuidelineDB"
            app:layout_constraintGuide_percent="0.75" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>